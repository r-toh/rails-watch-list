<h1><%= @list.name %></h1>

<%= link_to "Add new bookmark", new_list_bookmark_path(@list) %>

<div>
  <h2>Bookmarks</h2>
  <ul>
    <% @list.bookmarks.each do |bookmark| %>
      <h3><%= bookmark.movie.title %></h3>
      <%= image_tag bookmark.movie.poster_url, alt: "", width: 200 %>
      <p><%= bookmark.movie.overview %>
      </p>
      <li>
      <%= bookmark.comment %>
      <%= link_to "Remove",
      bookmark_path(bookmark),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
      </li>
    <% end %>
  </ul>
</div>
